{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "module": "esnext",
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "./lib"
  },
  "exclude": ["**/node_modules/**"],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "src/settings.js",
    "src/database/migrations/20211125201007-add-nft.js",
    "src/database/migrations/20211124102129-create-transaction.js",
    "src/database/migrations/2021112604099-create-auctions.js",
    "src/database/config/config.js"
  ]
}
